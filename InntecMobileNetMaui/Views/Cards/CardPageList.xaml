                                                    StrokeThickness="0">
                                                    <Border.StrokeShape>
                                                        <RoundRectangle CornerRadius="5"/>
                                                    </Border.StrokeShape>
                                                    <HorizontalStackLayout 
                                                        Margin="15,10,15,10"
                                                        HorizontalOptions="FillAndExpand"
