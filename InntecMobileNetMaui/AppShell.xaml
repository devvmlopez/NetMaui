<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InntecMobileNetMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InntecMobileNetMaui"
    xmlns:login="clr-namespace:InntecMobileNetMaui.Views.Login"
    xmlns:cards="clr-namespace:InntecMobileNetMaui.Views.Cards"
    xmlns:views="clr-namespace:InntecMobileNetMaui.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="Login" />
    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate views:MyDataPage}"
        Route="MyDatePage"/>
    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate cards:CardsPage}"
        Route="CardsPage"/>
    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate cards:CardPageList}"
        Route="CardPageList"/>
    <ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate cards:CardDetailPage}"
        Route="CardDetailPage"/>
    <!--<ShellContent
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate cards:CardsPage}"
        Route="CardMenu"/>-->
   
</Shell>
